<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteGray"
    tools:context=".PromoActivity">

    <TextView
        android:id="@+id/promo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/lg"
        android:background="@color/Blue"
        android:padding="@dimen/lg"
        android:text="TAMBAH PROMO"
        android:textStyle="bold"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/promo1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/promo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/lg"
        android:layout_marginEnd="@dimen/lg"
        android:layout_marginTop="@dimen/lg"
        app:cardCornerRadius="@dimen/sm">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/lg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="XYZ123"
                android:textColor="@color/Blue"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/promoInfo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sm"
                android:text="Promo Menarik Cuci Minimal 10 Kg Gratis Cuci 1 Kg berlaku untuk kelipatannya"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/promoStatus1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="ACTIVE"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/sm"
                android:gravity="center"
                android:background="@color/darkGreen"
                android:padding="@dimen/xss"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/promo2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/promo1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/lg"
        android:layout_marginEnd="@dimen/lg"
        android:layout_marginTop="@dimen/md"
        app:cardCornerRadius="@dimen/sm">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/lg">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="XYZ123"
                android:textColor="@color/Blue"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/promoInfo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/sm"
                android:text="Promo Menarik Cuci Minimal 10 Kg Gratis Cuci 1 Kg berlaku untuk kelipatannya"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/promoStatus2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="ACTIVE"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/sm"
                android:gravity="center"
                android:background="@color/darkGreen"
                android:padding="@dimen/xss"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>