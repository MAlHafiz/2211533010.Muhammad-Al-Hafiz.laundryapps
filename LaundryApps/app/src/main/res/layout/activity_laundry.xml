<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whiteGray"
    tools:context=".LaundryActivity">

    <TextView
        android:id="@+id/transactionView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/lg"
        android:background="@color/Blue"
        android:padding="@dimen/lg"
        android:text="TRANSAKSI"
        android:textStyle="bold"
        android:textColor="@color/white"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTransaction1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/lg"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/transactionView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/paid1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PAID - Rp. 20.000"
                    android:textColor="@color/white"
                    android:background="@color/PAID"
                    android:padding="@dimen/xs"/>

                <TextView
                    android:id="@+id/transcationId1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TRX - 000001"
                    android:textColor="@color/Blue"
                    android:layout_marginTop="@dimen/sm"
                    android:textStyle="bold"/>
                
                <TextView
                    android:id="@+id/username1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hafiz"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/sm"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationX="110dp"
                android:translationY="40dp"
                android:orientation="vertical"
                android:gravity="right">

                <TextView
                    android:id="@+id/Date1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senin, 10-09-2024"/>

                <TextView
                    android:id="@+id/process1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROSES"
                    android:textStyle="bold"
                    android:textColor="@color/Blue"
                    android:layout_marginTop="@dimen/sm"
                    android:layout_gravity="end"/>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardTransaction2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/lg"
        app:cardCornerRadius="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardTransaction1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/unpaid1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UNPAID - Rp. 10.000"
                    android:textColor="@color/white"
                    android:background="@color/UNPAID"
                    android:padding="@dimen/xs"/>

                <TextView
                    android:id="@+id/transcationId2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TRX - 000001"
                    android:textColor="@color/Blue"
                    android:layout_marginTop="@dimen/sm"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/username2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="unknown"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/sm"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:translationX="90dp"
                android:translationY="40dp"
                android:orientation="vertical"
                android:gravity="right">

                <TextView
                    android:id="@+id/Date2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Senin, 10-09-2024"/>

                <TextView
                    android:id="@+id/process2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PROSES"
                    android:textStyle="bold"
                    android:textColor="@color/Blue"
                    android:layout_marginTop="@dimen/sm"
                    android:layout_gravity="end"/>

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>