<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/lg"
    android:background="@color/colorBackground"
    tools:context=".layanan.LayananAddActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/lg">

        <TextView
            android:textColor="@color/PrimaryColor"
            android:textStyle="bold"
            android:layout_marginBottom="@dimen/lg"
            android:textSize="23sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LAYANAN"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="LAYANAN"
                android:textColor="@android:color/black"/>
            <EditText
                android:drawablePadding="@dimen/sm"
                android:drawableLeft="@drawable/ic_service"
                android:id="@+id/edLayAddTipe"
                android:layout_marginTop="@dimen/md"
                android:padding="@dimen/md"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/green_outline_bg"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/md"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="HARGA"
                android:textColor="@android:color/black"/>
            <EditText
                android:drawablePadding="@dimen/sm"
                android:id="@+id/edLayAddHarga"
                android:text="/kg"
                android:textAlignment="textEnd"
                android:inputType="number"
                android:layout_marginTop="@dimen/sm"
                android:padding="@dimen/md"
                android:drawableLeft="@drawable/ic_harga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/green_outline_bg"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="@dimen/x_lg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <Button
                android:id="@+id/btnLayAddSimpan"
                android:layout_marginRight="@dimen/xs"
                android:backgroundTint="@color/PrimaryColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Simpan"/>
            <Button
                android:id="@+id/btnLayAddBatal"
                android:layout_marginLeft="@dimen/xs"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Batal"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

